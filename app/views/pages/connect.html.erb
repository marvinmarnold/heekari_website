<section id="page-tree">
    <div class="container">
        <div class="row">
            <h1><%= t "pages.connect.title" %></h1>
        </div><!--row-->
    </div><!--container-->
</section><!--page-tree-->
<div class="divied-60"></div>
<div class="container">
    <div class="row">
        <div class="col-md-8">
            <h3><%= t "pages.connect.subtitle" %></h3>
            <p class="margin-btm40">
                <%= t "pages.connect.message_text" %>
            </p>
            <div class="form-box margin-btm40">
                <form>
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Name*</label>
                                <input type="text" class="form-control">
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Email*</label>
                                <input type="email" class="form-control">
                            </div>
                        </div>
                        <div class="col-sm-12">
                            <div class="form-group">
                                <label>Subject</label>
                                <input type="text" class="form-control">
                            </div>
                        </div>
                        <div class="col-sm-12">
                            <div class="form-group">
                                <label>Message*</label>
                                <textarea class="form-control" rows="6"></textarea>
                            </div>
                        </div>
                        <div class="col-sm-12 text-right">
                            <button type="submit" class="btn btn-dark btn-lg">Send Message</button>
                        </div>
                    </div>
                </form><!--Contact form-->
            </div>
        </div>
        <div class="col-md-4">
            <h3><%= t("pages.connect.alternative_title") %></h3>
            <p class="margin-btm20">
                <%= t("pages.connect.alternative_subtitle") %>
            </p>
            <ul class="list-unstyled contact-list margin-btm20">
                <li><i class="ion-ios7-email"></i> <strong><%= t "footer.contact_us_email" %></strong><%= mail_to t("footer.contact_us_email_address") %></li>
                <li><i class="ion-ios7-world"></i> <strong><%= t "footer.contact_us_website" %>:</strong><%= link_to t("footer.contact_us_website_url") %></li>
            </ul>
            <h3>Social Connect</h3>
            <ul class="list-unstyled list-inline social">
                <li><a href="http://www.facebook.com/heekarinow"><i class="ion-social-facebook-outline"  data-toggle="tooltip" data-placement="top" title="" data-original-title="Like On Facebook"></i></a></li>
                <li><a href="http://twitter.com/heekarinow"><i class="ion-social-twitter-outline"  data-toggle="tooltip" data-placement="top" title="" data-original-title="Follow On twitter"></i></a></li>

            </ul>
        </div>
    </div>
</div><!--Contact container end-->